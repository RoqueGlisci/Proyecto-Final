<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/head.ejs') %>
    <title>Formulario Backend</title>
</head>
<body>
    <div class="bg-success p-4 mb-4 d-flex justify-content-between align-items-center" style="--bs-bg-opacity: .5;">
        <h1>Bienvenido <%= user.email %></h1>
        <div>
            <a href="/profile" class="btn btn-info">Perfil</a>
            <a href="./store" class="btn btn-primary">Productos</a>
        </div>
        <div>
            <a href="/logout" class="btn btn-secondary">Logout</a>
        </div>
    </div>
    <section class="p-4 bg-secondary" style="--bs-bg-opacity: .5;">
        <h2 class="text-primary">Ingrese Producto</h2>
        <form id="form-add-product">
            <div class='mb-3'>
                <label class='form-label fw-bold' for='name'>Nombre</label>
                <input id="name-product" class="form-control" type='text' name='name' />
            </div>
            <div class='mb-3'>
                <label class='form-label fw-bold' for='price'>Precio</label>
                <input id="price-product" class="form-control" type='number' name='price' />
            </div>
            <div class='mb-3'>
                <label class='form-label fw-bold' for='img'>Foto URL</label>
                <input id="img-product" class="form-control" type='url' name='img' />
            </div>
            <div class='mb-3'>
                <input class="btn btn-success" type='submit' value='Enviar' />
            </div>
        </form>
    </section>
    <section class="p-4 bg-secondary" style="--bs-bg-opacity: .5;">
        <h2 class="text-primary">Vista de Productos</h2>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th class="align-middle">Nombre</th>
                    <th class="align-middle">Precio</th>
                    <th class="align-middle">Foto</th>
                </tr>
            </thead>
            <tbody id="table-products"></tbody>
        </table>
        <h2 id="no-products-form" class="bg-light p-4 text-danger">No hay productos listados</h2>
    </section>
    <section class="p-4 bg-secondary mt-4" style="--bs-bg-opacity: .5;">
        <h2 class="text-primary mb-4">Centro de Mensajes</h2>
        <hr>
        <div id="table-chat" class="my-4"></div>
        <form id="chat-form" class="form-inline">
            <input class="form-control w-50 my-2 mr-2" type="email" id="email" placeholder="Ingresa tu email" required>
            <input type="text" id="firstname" class="form-control w-50 my-2 mr-2" placeholder="Ingres치 tu nombre" required/>
            <input type="text" id="lastname" class="form-control w-50 my-2 mr-2" placeholder="Ingres치 tu apellido" required/>
            <input type="text" id="age" class="form-control w-50 my-2 mr-2" placeholder="Ingres치 tu edad" required/>
            <input id="text" class="form-control mb-3" type="text" name="text"
                placeholder="Ingres치 un mensaje..." required>
            <button class="btn btn-primary" type="submit">Enviar</button>
        </form>
    </section>
    
    <script src="https://cdn.socket.io/4.5.3/socket.io.min.js"
    integrity="sha384-WPFUvHkB1aHA5TDSZi6xtDgkF0wXJcIIxXhC6h8OT8EH3fC5PWro5pWJ1THjcfEi" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous">
    </script>
    <script src="../js/socketForm.js"></script>
</body>
</html>